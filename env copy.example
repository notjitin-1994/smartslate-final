## Supabase (Server-only unless prefixed NEXT_PUBLIC_)
# Project URL (used server + client)
SUPABASE_URL="https://YOUR_PROJECT_REF.supabase.co"
NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROJECT_REF.supabase.co"

# Keys
SUPABASE_ANON_KEY="your_anon_key"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_service_role_key" # server-only

# Auth verification
# Preferred (offline verification; no JWKS call):
# SUPABASE_JWT_SECRET="copy-from-Supabase-Auth-settings"
# Optional explicit JWKS URL (only if you must override). If your project requires an apikey, append it:
# SUPABASE_JWKS_URL="https://YOUR_PROJECT_REF.supabase.co/auth/v1/keys?apikey=YOUR_ANON_KEY"

# Legacy/optional fallbacks used in some places
# NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=""
# NEON_AUTH_JWKS_URL=""      # optional legacy
# NEON_AUTH_JWT_SECRET=""    # optional legacy

# Allow dev bypass for signup (never use in prod)
# AUTH_ALLOW_DEV_BYPASS="1"

## Database (Supabase Postgres)
# Pooled connection (recommended for runtime via pgBouncer)
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:6543/postgres?pgbouncer=true&connection_limit=1"
# Direct connection for migrations/long queries (optional)
# DIRECT_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres"

## Node Environment
NODE_ENV="development"

## Canonical host (prod only; optional)
# Example: smartslate.io OR www.smartslate.io
CANONICAL_HOST=""

## App URL (used for client redirects)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

## Email/Leads (optional)
# Where to send lead notifications
LEADS_EMAIL_TO=""
# Email providers (optional; if absent, local SMTP is used in dev)
# RESEND_API_KEY=""
# SMTP_HOST="localhost"
# SMTP_PORT="1025"

# Local dev: set to 1 to relax TLS verification for DB (never in prod)
# DISABLE_TLS_VERIFY="1"
